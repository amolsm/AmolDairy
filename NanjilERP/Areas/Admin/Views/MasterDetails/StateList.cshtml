@model IEnumerable<Model.State>

@{
    ViewBag.Title = "StateList";
    ViewBag.Description = "Admin";
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">


    <div class="box">
        <div class="box-header">
            <h3 class="box-title">State Lists</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <p>

                @*@Html.ActionLink("Create New", "BrandCreate")*@
                @Html.ActionLink("Create New", "StateCreate", "MasterDetails", null, new { data_modal = "", id = "btnCreate", @class = "btn-xs btn-success" })
            </p>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>State Name</th>
                        <th>Is Active</th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.StateId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.StateId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.StateId })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>State Name</th>
                        <th>Is Active</th>
                        <th>Action </th>
                    </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section><!-- /.content -->


<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/ModalForm.js"></script>