@model IEnumerable<Model.District>

@{
    ViewBag.Title = "DistrictList";
    ViewBag.Description = "Admin";
}

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">


    <div class="box">
        <div class="box-header">
            <h3 class="box-title">District Lists</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <p>

                @*@Html.ActionLink("Create New", "BrandCreate")*@
                @Html.ActionLink("Create New", "DistrictCreate", "MasterDetails", null, new { data_modal = "", id = "btnCreate", @class = "btn-xs btn-success" })
            </p>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>District </th>
                        <th>State</th>
                        <th>Is Active</th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tbody>
                    

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DistrictName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DistrictId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.DistrictId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.DistrictId })
                                </td>
                            </tr>
                        }

                </tbody>
                <tfoot>
                    
                    <tr>
                        <th>District </th>
                        <th>State</th>
                        <th>Is Active</th>
                        <th>Action </th>
                    </tr>
                   
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section><!-- /.content -->


<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/ModalForm.js"></script>