@model IEnumerable<Model.Slab>

@{
    ViewBag.Title = "SlabList";
    ViewBag.Description = "Admin";
}

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">


    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Slab List</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <p>
                @Html.ActionLink("Create New", "SlabCreate", "MasterDetails", null, new { data_modal = "", id = "btnCreate", @class = "btn-xs btn-success" })
            </p>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Slab Name</th>
                        
                        <th>Description</th>
                        <th>Is Active</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SlabName)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {  <text> Yes</text>}
                                else
                                { <text> No</text> }

                            </td>
                            <td>
                                @Html.ActionLink("Edit", "SlabEdit", new { id = item.SlabId }, new { data_modal = "" }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.BrandId }) |*@
                                @Html.ActionLink("Deactive", "SlabDeactive", new { confirm = true, id = item.SlabId },
                                            new { onclick = "return confirm('Are you sure to deactive Brand?');" })
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Slab Name</th>
                        
                        <th>Description</th>
                        <th>Is Active</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section><!-- /.content -->


<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/ModalForm.js"></script>